<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentRunSessionActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="9dp"
        tools:layout_editor_absoluteX="9dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/stopSessionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_orange_light"
            android:onClick="onStopClicked"
            android:text="@string/stop"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/currentTV"
        android:layout_width="221dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/current_session"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

    <TextView
        android:id="@+id/speedTV"
        android:layout_width="160dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/durationTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTV"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/durationTV"
        android:layout_width="213dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/currentDistanceTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/currentDistanceTV"
        android:layout_width="213dp"
        android:layout_height="121dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>